doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet" href="../public/style.css")
    body 
        header
            h1 Noom
        main 
            div#welcome
                div#welcomeForm
                    form
                        input(placeholder="room name", required, type="text")
                        button#enter Enter Room
            div#call
                div#setting
                    button#mute Mute
                    button#camera Turn Camera Off
                    select#cameras                  
                div#myStream(style="width:33%; float:left;")
                    div#myVideo
                        video#myFace(autoplay, playsinline, width="100%", height="250")  
                div#chat(style="width:33%; float:left;")     
                    h4 CHAT   
                    div#msg
                        ul     
                    div#writeMsg   
                        form   
                            input(placeholder="Write Message", required, type="text")
                            button#send Enter                              
                div#peerStream(style="width:33%; float:left;")              
                    div#peerVideo
                        video#peerFace(autoplay, playsinline, width="100%", height="250")     
        script(src="/socket.io/socket.io.js")            
        script(src="/public/js/app.js")